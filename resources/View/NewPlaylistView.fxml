    <children>
        <TextField fx:id="txtPlaylistName" layoutX="25.0" layoutY="54.0" />
        <Text layoutX="25.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter name of new Playlist" />
        <Button fx:id="btnSave" layoutX="25.0" layoutY="87.0" mnemonicParsing="false" onAction="#onActionSavePlaylist" prefHeight="26.0" prefWidth="52.0" text="Save" />
